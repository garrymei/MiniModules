{
  "name": "minimodules",
  "version": "0.1.0",
  "description": "A modular microservices platform with mobile frontend, admin dashboard, and backend services",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "pnpm -r run type-check",
    "clean": "pnpm -r run clean",
    "install:all": "pnpm install",
    "build:all": "pnpm -r run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "miniprogram",
    "microservices",
    "modular",
    "multi-tenant",
    "restaurant",
    "booking",
    "ecommerce"
  ],
  "author": "MiniModules Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/MiniModules.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/MiniModules/issues"
  },
  "homepage": "https://github.com/your-org/MiniModules#readme"
}
