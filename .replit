modules = ["nodejs-18"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Admin Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Backend"

[[workflows.workflow]]
name = "Admin Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/admin && node server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "API Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd packages/api && node simple-server.js"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35615
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["node", "packages/admin/server.js"]
