{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["@tarojs/taro", "@types/node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
