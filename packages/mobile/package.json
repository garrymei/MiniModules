{
  "name": "@minimodules/mobile",
  "version": "0.1.0",
  "description": "WeChat Mini Program frontend for MiniModules platform",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:dev": "tsc --project tsconfig.dev.json && npm run copy-assets",
    "build:prod": "tsc --project tsconfig.prod.json && npm run copy-assets",
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "copy-assets": "if exist src\\assets xcopy /E /I src\\assets dist\\assets || echo Assets copied"
  },
  "dependencies": {
    "miniprogram-api-typings": "^3.12.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/wechat-miniprogram": "^3.4.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "miniprogram",
    "wechat",
    "mobile",
    "typescript"
  ],
  "author": "MiniModules Team",
  "license": "MIT"
}
