{
  "id": "user",
  "name": "用户模块",
  "version": "1.0.0",
  "description": "用户管理核心模块，提供用户注册、登录、个人信息管理",
  "category": "core",
  "routes": [
    {
      "path": "/user/profile",
      "component": "UserProfilePage",
      "title": "个人中心",
      "icon": "user"
    },
    {
      "path": "/user/settings",
      "component": "UserSettingsPage",
      "title": "设置",
      "icon": "settings"
    }
  ],
  "config_schema": {
    "type": "object",
    "properties": {
      "enable_phone_login": {
        "type": "boolean",
        "default": true,
        "description": "是否支持手机号登录"
      },
      "enable_wechat_login": {
        "type": "boolean",
        "default": true,
        "description": "是否支持微信登录"
      },
      "require_phone_verification": {
        "type": "boolean",
        "default": true,
        "description": "是否需要手机号验证"
      }
    }
  },
  "capabilities": [
    "user_registration",
    "user_authentication",
    "profile_management",
    "session_management"
  ],
  "dependencies": [],
  "permissions": {
    "read": ["customer", "staff", "admin"],
    "write": ["customer", "staff", "admin"],
    "admin": ["admin"]
  },
  "api_endpoints": [
    "POST /api/user/register",
    "POST /api/user/login",
    "GET /api/user/profile",
    "PUT /api/user/profile",
    "POST /api/user/logout"
  ]
}
