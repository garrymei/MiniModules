{
  "id": "booking",
  "name": "预约模块",
  "version": "1.0.0",
  "description": "场馆预约功能模块，支持时段管理、预约创建、预约管理",
  "category": "business",
  "routes": [
    {
      "path": "/booking/resources",
      "component": "ResourceListPage",
      "title": "资源列表",
      "icon": "grid"
    },
    {
      "path": "/booking/calendar",
      "component": "CalendarPage",
      "title": "日历",
      "icon": "calendar"
    },
    {
      "path": "/booking/slot-selection",
      "component": "SlotSelectionPage",
      "title": "时段选择",
      "icon": "clock"
    },
    {
      "path": "/booking/confirm",
      "component": "BookingConfirmPage",
      "title": "确认预约",
      "icon": "check"
    },
    {
      "path": "/booking/my-bookings",
      "component": "MyBookingsPage",
      "title": "我的预约",
      "icon": "list"
    },
    {
      "path": "/booking/booking-detail",
      "component": "BookingDetailPage",
      "title": "预约详情",
      "icon": "file-text"
    }
  ],
  "config_schema": {
    "type": "object",
    "properties": {
      "slotMinutes": {
        "type": "number",
        "enum": [30, 45, 60],
        "default": 60,
        "description": "时段长度（分钟）"
      },
      "openHours": {
        "type": "object",
        "properties": {
          "monday": { "type": "object", "properties": { "start": { "type": "string" }, "end": { "type": "string" } } },
          "tuesday": { "type": "object", "properties": { "start": { "type": "string" }, "end": { "type": "string" } } },
          "wednesday": { "type": "object", "properties": { "start": { "type": "string" }, "end": { "type": "string" } } },
          "thursday": { "type": "object", "properties": { "start": { "type": "string" }, "end": { "type": "string" } } },
          "friday": { "type": "object", "properties": { "start": { "type": "string" }, "end": { "type": "string" } } },
          "saturday": { "type": "object", "properties": { "start": { "type": "string" }, "end": { "type": "string" } } },
          "sunday": { "type": "object", "properties": { "start": { "type": "string" }, "end": { "type": "string" } } }
        },
        "description": "营业时间（周几、起止）"
      },
      "maxBookableDays": {
        "type": "number",
        "default": 7,
        "minimum": 1,
        "maximum": 30,
        "description": "可提前预约天数"
      },
      "cancelPolicy": {
        "type": "string",
        "enum": ["free", "24h", "48h", "no_cancel"],
        "default": "24h",
        "description": "取消政策"
      },
      "checkinMethod": {
        "type": "string",
        "enum": ["qrcode", "staff"],
        "default": "qrcode",
        "description": "核销方式"
      }
    },
    "required": ["slotMinutes", "maxBookableDays", "cancelPolicy"]
  },
  "capabilities": [
    "slot_management",
    "booking_creation",
    "booking_cancellation",
    "availability_check"
  ],
  "dependencies": ["user"],
  "permissions": {
    "read": ["customer", "staff", "admin"],
    "write": ["customer", "staff", "admin"],
    "admin": ["admin"]
  },
  "api_endpoints": [
    "GET /api/booking/slots",
    "POST /api/booking/bookings",
    "GET /api/booking/bookings",
    "PUT /api/booking/bookings/{id}",
    "DELETE /api/booking/bookings/{id}"
  ]
}
