{
  "id": "ordering",
  "name": "点餐模块",
  "version": "1.0.0",
  "description": "餐厅点餐功能模块，支持菜单展示、购物车、订单管理",
  "category": "business",
  "routes": [
    {
      "path": "/ordering/menu",
      "component": "MenuPage",
      "title": "菜单",
      "icon": "menu"
    },
    {
      "path": "/ordering/cart",
      "component": "CartPage",
      "title": "购物车",
      "icon": "shopping-cart"
    },
    {
      "path": "/ordering/orders",
      "component": "OrderListPage",
      "title": "我的订单",
      "icon": "list"
    }
  ],
  "config_schema": {
    "type": "object",
    "properties": {
      "time_slot_length": {
        "type": "number",
        "default": 30,
        "minimum": 15,
        "maximum": 120,
        "description": "时段长度（分钟）"
      },
      "max_items_per_order": {
        "type": "number",
        "default": 50,
        "minimum": 1,
        "maximum": 200,
        "description": "单次最大点餐数量"
      },
      "enable_takeout": {
        "type": "boolean",
        "default": true,
        "description": "是否支持外卖"
      },
      "enable_dine_in": {
        "type": "boolean",
        "default": true,
        "description": "是否支持堂食"
      }
    },
    "required": ["time_slot_length", "max_items_per_order"]
  },
  "capabilities": [
    "menu_display",
    "cart_management", 
    "order_creation",
    "order_tracking",
    "payment_integration"
  ],
  "dependencies": ["user", "payment"],
  "permissions": {
    "read": ["customer", "staff", "admin"],
    "write": ["customer", "staff", "admin"],
    "admin": ["admin"]
  },
  "api_endpoints": [
    "GET /api/ordering/menu",
    "POST /api/ordering/orders",
    "GET /api/ordering/orders",
    "PUT /api/ordering/orders/{id}",
    "DELETE /api/ordering/orders/{id}"
  ]
}
